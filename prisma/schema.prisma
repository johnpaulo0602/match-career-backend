generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id                               String   @id @default(auto()) @map("_id") @db.ObjectId
  name                             String
  email                            String   @unique
  whatsappNumber                   String   @unique
  inteligencia_linguistica         Int      @default(0)
  inteligencia_logico_matematica   Int      @default(0)
  inteligencia_espacial            Int      @default(0)
  inteligencia_musical             Int      @default(0)
  inteligencia_corporal_cinestesica Int     @default(0)
  inteligencia_interpessoal        Int      @default(0)
  inteligencia_intrapessoal        Int      @default(0)
  inteligenciasPredominantes       String[] @default([])
  createdAt                        DateTime @default(now())
  updatedAt                        DateTime @updatedAt
}

model Question {
  id           String @id @default(auto()) @map("_id") @db.ObjectId
  tipoInteligencia String
  texto        String
  ordem        Int
}
